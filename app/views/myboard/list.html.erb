<h2>Visitor</h2>
<form action="/myboard/write" method="post">
    <label for="title">제목</label>
    <input type="text" name="title" id="title" class="form-control" width="100px" required>
    <label for="writer">작성자</label>
    <input type="text" name="writer" id="writer" class="form-control" width="300px"required>
    <textarea name="content" class="form-control" rows="7" cols="120" required></textarea><br>
    <button type="submit" class="btn btn-default">작성</button>
</form>
<hr>
<div class="print">
    <% @all_post.each do |p| %>
    제목 : <%= p.title %> | 작성자 : <%= p.writer %><br>
    <%= p.content %>
    <hr>
    <% end %>   
</div>
